<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/circle"
        app:layout_constraintTop_toTopOf="@+id/rootLayout"
        app:layout_constraintRight_toRightOf="@+id/rootLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/step_circle"
        />

    <View
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/step_progress_height"
        android:background="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="@+id/circle"
        app:layout_constraintRight_toLeftOf="@+id/circle"
        app:layout_constraintTop_toTopOf="@+id/circle" />
</androidx.constraintlayout.widget.ConstraintLayout>